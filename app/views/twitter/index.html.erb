<table class="table table-striped table-hover ">
  <thead>
    <h3>The Fleet is Buzzing</h3>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= image_tag(tweet.user.profile_image_url)%></td>
        <td>@<%= link_to "#{tweet.user.screen_name}", "http://twitter.com/#{tweet.user.screen_name}", target: "_blank" %></td>
        <td><%= tweet.text %></td>
        <td><%= time_ago_in_words(tweet.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
