<p id="notice"><%= notice %></p>

<h3>On the role</h3>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Twitter</th>
      <th>Location</th>
      <th>Last Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= link_to "#{truck.name}", truck %></td>
        <td><%= truck.twitter %></td>
        <td><%= truck.locations.last.longitude %>
            <%= truck.locations.last.latitude %>
        </td>
        <td><%= time_ago_in_words(truck.created_at) + " ago"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Truck', new_truck_path %>

<table>
  <thead>
    <tr>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.longitude %></td>
        <td><%= location.latitude %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
