

<h3>On the roll</h3>
<%= link_to 'Add a Truck', new_truck_path, class: "btn btn-success" %>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Last Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.order(id: :desc).each do |truck| %>
      <tr>
        <td><%= link_to "#{truck.name}", truck %></td>
        <td>
            <% if truck.locations.last %>
              <%= truck.locations.last.address %>
            <% end %>
        </td>
        <td><%= time_ago_in_words(truck.created_at) + " ago"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<table class="table table-striped table-hover ">
  <thead>
    <h3>The Fleet is Buzzing</h3>
  </thead>
  <tbody>
    <% @tweets.home_tweets.each do |tweet| %>
      <tr>
        <td><%= image_tag(tweet.user.profile_image_url) %></td>
        <td>@<%= tweet.user.screen_name %></td>
        <td><%= tweet.text %></td>
      </ul>
    <% end %>
  </tbody>
</table>
