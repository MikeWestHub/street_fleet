<p id="notice"><%= notice %></p>

<div class="map-container" id='map' style='width: 100%; height: 500px;'>
  <script type="text/javascript">
    var latlong_array = [
      <% @locations.each do |location|%>
      {
        "type": "Feature",
        "geometry": {
          "type": "Point",
          "coordinates": [
              <%= location.longitude %>,
              <%= location.latitude %>
          ]
        },
        "properties": {
          "title": " <%= location.truck.name %> ",
          "marker-symbol": "monument"
        }
      },
      <% end %>
    ];

  </script>
</div>

<h3>Active Trucks</h3>
<% @locations.each do |location| %>
  <ul>
    <li><%= link_to "#{location.truck.name}", truck_path(id: location.truck_id)  %></li>
  </ul>
<% end %>
