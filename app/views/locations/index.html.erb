<div class="map-container" id='mapIndex'>
  <script type="text/javascript">
    var latlongArray = [
      <% @locations.each do |location|%>
      {
        "type": "Feature",
        "geometry": {
          "type": "Point",
          "coordinates": [
              <%= location.longitude %>,
              <%= location.latitude %>
          ]
        },
        "properties": {
          "title": " <%= location.truck.name %> ",
          "marker-symbol": "car"
        }
      },
      <% end %>
    ];

  </script>
</div>
